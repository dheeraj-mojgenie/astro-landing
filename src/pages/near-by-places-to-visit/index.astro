<Layout title="">
  <div class="relative">
    <div
      class="bg-[url('/assets/img/jpg/popular-destination-hero.jpg')] 2xl:pl-[80px] 2xl:pr-[80px] xl:pl-[80px] xl:pr-[80px] px-[25px] md:px-[50px] pt-[200px] md:pt-[200px] pb-[47px] md:pb-[80px] text-white bg-no-repeat bg-cover bg-center"
    >
      <p
        class="relative z-10 text-[30px] text-white text-left font-bold md:text-[42px] tracking-wide mb-5 uppercase"
      >
        popular destination
      </p>
      <p class="max-w-4xl text-left text-white relative z-10">
        Explore an enchanting destination embraced by nature's embrace, where
        verdant landscapes create a tranquil heaven.
      </p>
    </div>
    <div
      class="absolute w-full h-full top-0 left-0 right-0 bottom-0 md:hidden"
      style="background-image: linear-gradient(335.05deg, rgba(0, 0, 0, 0) 0.18%, #6948487e 100%);"
    >
    </div>
    <div
      class="absolute w-full h-full top-0 left-0 right-0 bottom-0 hidden md:block"
      style="background-image: linear-gradient(335.05deg, rgba(0, 0, 0, 0) 48.18%,  #6948487e 100%);"
    >
    </div>
  </div>
  {
    destinations.map((destination) => (
      <div
        id={destination.id}
        class:list={[
          '2xl:pl-[80px] 2xl:pr-[80px] xl:pl-[80px] xl:pr-[80px] px-[25px] md:px-[50px] md:py-[70px] pt-[55px] pb-[25px]',
          { 'bg-gray-50': destination.reverse },
        ]}
      >
        <div
          class:list={[
            'flex flex-col gap-5 lg:gap-10 md:flex-row items-center justify-between',
            { 'md:flex-row-reverse': destination.reverse },
          ]}
        >
          <div class="flex flex-col max-w-md">
            <p class="font-semibold mb-2 text-[32px] lg:text-[40px]">
              {destination.name}
            </p>
            <p class="font-light">{destination.description}</p>
          </div>

          <div class="relative">
            <div
              class="flex flex-row justify-between gap-5 overflow-x-scroll w-full scrollbar-hidden max-w-[250px] md:max-w-sm lg:max-w-3xl"
              data-carousel="slide"
              id={`${destination.id}Images`}
            >
              {destination.images.map((image) => (
                <ImageCard text={image.text} src={image.src} />
              ))}

              <button
                type="button"
                class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
                onclick={`scrollImages('${destination.id}Images')`}
              >
                <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
                  <svg
                    class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180"
                    aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 6 10"
                  >
                    <path
                      stroke="currentColor"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="m1 9 4-4-4-4"
                    />
                  </svg>
                  <span class="sr-only">Next</span>
                </span>
              </button>
            </div>
          </div>
        </div>
      </div>
    ))
  }

  <script is:inline>
    function scrollImages(containerId) {
      const container = document.getElementById(containerId);
      if (container) {
        const scrollAmount = 300; // Adjust this value as needed
        container.scrollLeft += scrollAmount;
      }
    }

    // Make the function available globally
    window.scrollImages = scrollImages;
  </script>
</Layout>
