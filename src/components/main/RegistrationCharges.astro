---
// Registration Charges Astro Component
const membershipTypes = [
  {
    type: 'AASK Member',
    bgColor: 'bg-blue-900',
    hoverColor: 'hover:text-blue-600',
    earlyBirdPrice: 6000,
    regularPrice: 7000,
    earlyBirdDeadline: '15th April 2024',
    regularDeadline: '15th May 2024',
  },
  {
    type: 'PG Member',
    bgColor: 'bg-teal-500',
    hoverColor: 'hover:text-teal-400',
    earlyBirdPrice: 6000,
    regularPrice: 7000,
    earlyBirdDeadline: '15th April 2024',
    regularDeadline: '15th May 2024',
  },
  {
    type: 'PG Non Member',
    bgColor: 'bg-orange-400',
    hoverColor: 'hover:text-orange-400',
    earlyBirdPrice: 6000,
    regularPrice: 7000,
    earlyBirdDeadline: '15th April 2024',
    regularDeadline: '15th May 2024',
  },
  {
    type: 'Non Member',
    bgColor: 'bg-purple-600',
    hoverColor: 'hover:text-purple-500',
    earlyBirdPrice: 6000,
    regularPrice: 7000,
    earlyBirdDeadline: '15th April 2024',
    regularDeadline: '15th May 2024',
  },
];
---

<section
  id="charges"
  class="bg-[url('/assets/img/png/registration-bg.png')] mx-auto bg-cover bg-center bg-no-repeat bg-[#F9F9F9] py-8 sm:py-12 lg:py-16px-4 sm:px-6 md:px-8 lg:px-10 xl:px-14 w-full"
>
  <div class="w-full mx-auto">
    <h1
      class="text-2xl sm:text-4xl md:text-5xl font-bold mb-4 md:mb-6 py-5 text-center md:text-start"
    >
      Registration Charges
    </h1>

    <!-- Responsive grid container for membership cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {
        membershipTypes.map((membership) => (
          <div
            class={`${membership.bgColor} opacity-70 shadow-lg text-white max-w-60 md:w-[500px] lg:min-w-full lg:max-w-full h-full m-auto`}
          >
            <div class="p-6 md:p-8 lg:p-14 lg:py-20 flex flex-col h-full">
              <h2 class="text-xl md:text-2xl lg:text-3xl font-bold lg:font-extrabold mb-4 md:mb-8">
                {membership.type}
              </h2>

              <div class="mb-4 md:mb-6">
                <h3 class="text-base md:text-lg lg:text-2xl font-medium mb-2">
                  Early bird{' '}
                  <span class="text-xs md:text-sm lg:text-lg font-light">
                    (till {membership.earlyBirdDeadline})
                  </span>
                </h3>
                <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold mt-5">
                  ₹{membership.earlyBirdPrice}
                </h1>
              </div>

              <hr class="border-t border-white opacity-30 my-4 md:my-6" />

              <div class="mb-4 md:mb-8">
                <h3 class="text-base md:text-lg lg:text-4xl font-bold mb-2">
                  Regular{' '}
                  <span class="text-xs md:text-sm lg:text-lg font-light">
                    (till {membership.regularDeadline})
                  </span>
                </h3>
                <h1 class="text-2xl md:text-3xl font-bold">
                  ₹{membership.regularPrice}
                </h1>
              </div>

              <a
                href="#"
                class={`block w-full py-2 md:py-3 mt-8 text-center border-2 border-white text-white font-medium text-base md:text-lg lg:text-3xl ${membership.hoverColor} hover:bg-white transition duration-300`}
              >
                Register
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
